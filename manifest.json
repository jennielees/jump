{
    "manifest_version": 2,

    "name": "jump",
    "description": "Remember sites using words, not long URLs.",
    "version": "1.0",

    "omnibox": {
        "keyword" : "ju"
    },

    "icons": {
        "16": "icon1_16.png",
        "64": "icon1_64.png"
    },
    
    "background": {
        "scripts": [
            "utils.js",
            "background.js"
        ]
    },
   "browser_action": {
      "default_icon": "icon1_64.png",
      "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://fonts.googleapis.com; object-src 'self'",

    "content_scripts": [
        {
          "matches": [
              "http://*/*",
              "https://*/*",
              "file://*/*"
          ],
          
          "js": [
              "sha1.js",
              "utils.js",
              "js/jquery.js",
	            "popup.js",
	            "list.js"
          ]
        }
    ],
    
    "permissions": [
        "storage",
        "tabs"
    ]
}

